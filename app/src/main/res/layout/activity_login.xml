<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_59"
        android:layout_height="@dimen/dp_87"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:src="@mipmap/ic_login" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/iv_logo"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <View
        android:id="@+id/v_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/et_phone"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:background="#be9567" />


    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/v_one"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/text_size_13" />

    <View
        android:id="@+id/v_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/et_code"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:background="#be9567" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/et_code"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:padding="@dimen/dp_5"
        android:text="获取验证码"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_14" />


    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/v_two"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/ll_ot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ok"
        android:layout_marginTop="@dimen/dp_45"
        android:gravity="center"
        android:orientation="horizontal">


        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />

        <View
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#cccccc" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_we_chat"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/ll_ot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/ic_sign_wechat" />

</RelativeLayout>