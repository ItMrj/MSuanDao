<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_62"
    android:background="@color/color_fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/dp_20">

    <LinearLayout
        android:id="@+id/item_title_back_layout"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15">

        <ImageView
            android:id="@+id/item_title_back"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@mipmap/ic_back" />
    </LinearLayout>


    <com.she.suandao.customview.FontTextView
        android:id="@+id/item_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/item_title_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/item_title_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/dp_14"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>